<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/base.css">
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="container-fluid">
    <div class="row">
      <% if (typeof user != 'undefined') { %>

      <nav class="col-md-3 col-lg-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
            <div class="sidebar-header d-flex align-items-center">
                <img src="/images/avatar.JPG" class="user-avatar me-2" alt="User avatar">
                <div>
                    <h6 class="mb-0"><%= user.name %></h6>
                    <small class="text-muted"><%= user.role.toUpperCase() %></small>
                </div>
            </div>

            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link" href="/profile">
                        <i class="fas fa-user me-2"></i>
                        Profile
                    </a>
                </li>

                <% if (user.role === 'institution') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/institution/students">
                            <i class="fas fa-person me-2"></i>
                            Students
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/institution/forms">
                            <i class="fas fa-clipboard-list me-2"></i>
                            Form8s
                        </a>
                    </li>
                <% } %>

                <% if (user.role === 'itf') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/itf/students">
                            <i class="fas fa-person me-2"></i>
                            Students
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/itf/form8s">
                            <i class="fas fa-clipboard-list me-2"></i>
                            Form8s
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/itf/scafs">
                            <i class="fas fa-clipboard-list me-2"></i>
                            SCAR Form
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/itf/institutions">
                            <i class="fas fa-building me-2"></i>
                            Institutions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/itf/approve-institutions">
                            <i class="fas fa-building me-2"></i>
                            Approve Institutions
                        </a>
                    </li>
                <% } %>

                <% if (user.role === 'student') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/student/bank-details">
                            <i class="fas fa-university me-2"></i>
                            Bank Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/student/form8">
                            <i class="fas fa-plus-circle me-2"></i>
                            Form 8
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/student/scafs">
                            <i class="fas fa-plus-circle me-2"></i>
                            SCAR Form
                        </a>
                    </li>
                <% } %>

                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">
                        <i class="fas fa-clipboard-list me-2"></i>
                        Work Logs
                        <% if (user.role !== 'student') { %>
                            <span class="badge bg-info ms-2">View Only</span>
                        <% } %>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/auth/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
      <% } %>
      <!-- Main Content -->
      <main class="<%= typeof user !== 'undefined' ? 'col-md-9 ms-sm-auto col-lg-10' : 'col-12' %> px-md-4 pt-3">
        <%- body %>
      </main>
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set active class based on current URL
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    });
    </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>