<%- include('../partials/head-end.ejs') %>
<%- include('../partials/nav.ejs') %>

<section class="container-fluid page-header text-center">
    <h2>#continue</h2>
  <p>Login to continue</p>
  </section>
  
  <section id="form-details" class="border p-5">
    <%- include('../partials/notification.ejs') %>
    
    <form action="/auth/login" method="post">
      <div class="text-center">
          <span>Sign In</span>
          <h2>Welcome back!</h2>
      </div>
      <div class="form-group mb-2">
        <label for="username">Username</label>
        <input type="text" class="form-control" id="username"
        pattern="[a-z]+" title="Enter lowercase alphabets only"
        name="username"
         placeholder="Enter your username" required>
      </div>

      <div class="form-group mb-2">
        <label for="password">Password</label>
        <input type="password" class="form-control" 
        name="password"
        pattern="\S.{4,}\S" placeholder="Password should not be less than 6 characters" required>
      </div>
      <button type="submit" class="btn btn-success mt-2">Sign In</button>
    </form>
    <p class="mt-2">
      Don't have an account? <a href="/auth/signup">Sign Up</a>
    </p>
  </section>

