<section class="pt-3">
    <div class="d-flex justify-content-between mb-4">
        <h2>Review SCAF</h2>
        <a href="/institution/scafs" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>

    <h4>Student Entries</h4>
    <ul>
        <% scaf.students.forEach(student => { %>
            <li><%= student.student.name %> - <%= student.courseOfStudy %> (<%= student.commencementDate.toDateString() %> to <%= student.completionDate.toDateString() %>)</li>
        <% }) %>
    </ul>

    <h4>Organization Details</h4>
    <form action="/institution/scafs/<%= scaf._id %>/review" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Organization Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= scaf.organizationSection.name || '' %>" required>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <textarea class="form-control" id="address" name="address" required><%= scaf.organizationSection.address || '' %></textarea>
        </div>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= scaf.organizationSection.phoneNumber || '' %>" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= scaf.organizationSection.email || '' %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit SCAF</button>
    </form>
</section>
