<section class="pt-3">
  <% 
    // Group logs by week number
    const weeks = {};
    // Helper to calculate ISO week number
    function getWeekNumber(d) {
      // Copy date to avoid modifying the original
      d = new Date(Date.UTC(d.getFullYear(), d.getMonth(), d.getDate()));
      // Set to nearest Thursday: current date + 4 - current day number (with Sunday as 7)
      const dayNum = d.getUTCDay() || 7;
      d.setUTCDate(d.getUTCDate() + 4 - dayNum);
      // Calculate week number: number of days since the first day of the year
      const yearStart = new Date(Date.UTC(d.getUTCFullYear(), 0, 1));
      const weekNo = Math.ceil((((d - yearStart) / 86400000) + 1) / 7);
      return weekNo;
    }
    
    logs.forEach(log => {
      const date = new Date(log.day);
      const week = getWeekNumber(date);
      if (!weeks[week]) {
        weeks[week] = [];
      }
      weeks[week].push(log);
    });
    
    const sortedWeekNumbers = Object.keys(weeks).sort((a, b) => a - b);
  %>

  <% if (user.role === 'student') { %>
    <div class="d-flex justify-content-between mb-4">
      <h2>My Logs</h2>
      <a href="/logbooks/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Log
      </a>
    </div>
  <% } else { %>
    <h2 class="mb-4">Viewing Logs</h2>
  <% } %>

  <% if (logs && logs.length) { %>
    <% sortedWeekNumbers.forEach(weekNum => { %>
      <h3>Week <%= weekNum %></h3>
      <% weeks[weekNum].forEach(log => { %>
        <div class="card mb-3">
          <div class="card-header">
            <small class="text-muted">
              <%= new Date(log.day).toLocaleDateString() %>
            </small>
          </div>
          <div class="card-body">
            <p><strong>Work Log:</strong> <%= log.work %></p>
            <% if(log.images && log.images.length) { %>
              <div class="mb-2">
                <% log.images.forEach(image => { %>
                  <img src="/uploads/<%= image %>" alt="Log image" class="img-thumbnail" style="width: 80px;">
                <% }) %>
              </div>
            <% } %>
            <% if (user.role === 'student') { %>
              <div class="btn-group mt-2">
                <a href="/logbooks/<%= log._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                <form action="/logbooks/<%= log._id %>/delete" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </div>
            <% } else { %>
              <small class="text-muted">
                Submitted by: <%= log.student.name %>
              </small>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% }) %>
  <% } else { %>
    <p>No work logs found. Start by adding a new log entry.</p>
  <% } %>

  <!-- Pagination Controls -->
  <% if (logs && logs.length) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/dashboard?page=<%= currentPage - 1 %>">Previous</a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link">Previous</span>
          </li>
        <% } %>

        <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="/dashboard?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/dashboard?page=<%= currentPage + 1 %>">Next</a>
          </li>
        <% } else { %>
          <li class="page-item disabled">
            <span class="page-link">Next</span>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</section>
