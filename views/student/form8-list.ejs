<section class="pt-3">
    <div class="d-flex justify-content-between mb-4">
        <h2>My Forms</h2>
        <a href="/student/form8/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add
        </a>
    </div>
    <%- include('../partials/notification.ejs') %>
    <table class="table">
        <thead>
            <tr>
                <th>Company</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% forms.forEach(form => { %>
                <tr>
                    <td><%= form.studentSection.companyName %></td>
                    <td><%= form.studentSection.startDate.toDateString() %></td>
                    <td><%= form.studentSection.endDate.toDateString() %></td>
                    <td><%= form.status %></td>
                    <td>
                        <% if (form.status === 'draft') { %>
                            <a href="/student/form8/<%= form._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/student/form8/<%= form._id %>/submit" class="btn btn-sm btn-success">Submit</a>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</section>