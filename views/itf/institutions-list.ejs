<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="my-4">Institutions Pending Approval</h2>

            <% if (institutions.length === 0) { %>
                <div class="alert alert-info" role="alert">
                    No institution exist in the database.
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Institution Name</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% institutions.forEach(function(institution) { %>
                                <tr>
                                    <td><%= institution.name %></td>
                                    <td><%= institution.address %></td>
                                    <td><%= institution.email %></td>
                                    <td>
                                        <form action="/itf/reject-institution" method="post" class="d-inline">
                                            <input type="hidden" name="institutionId" value="<%= institution._id %>">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>
